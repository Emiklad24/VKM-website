{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/assets/*"],
      "@util/*": ["src/util/*"],
      "@services/*": ["src/services/*"],
      "@config/*": ["src/config/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  },

  "exclude": ["node_modules"],
  "include": ["next-env.d.js", "**/*.js", "**/*.jsx"]
}
